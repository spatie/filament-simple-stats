{
    "name": "spatie/filament-simple-stats",
    "description": "Opinionated prebuilt stat widgets to quickly add to your Filament dashboards.",
    "keywords": [
        "Spatie",
        "laravel",
        "filament",
        "filament-simple-stats"
    ],
    "homepage": "https://github.com/spatie/filament-simple-stats",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Van Dijck",
            "email": "tim@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3|^8.4",
        "filament/widgets": "^4.0",
        "flowframe/laravel-trend": "^0.4.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^2.9|^3.4",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.1.6",
        "pestphp/pest-plugin-arch": "^v4.0.0",
        "pestphp/pest-plugin-laravel": "^v4.0.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1|^2.0",
        "phpstan/phpstan-phpunit": "^1.3|^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\FilamentSimpleStats\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\FilamentSimpleStats\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "build": [
            "@composer run prepare"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
